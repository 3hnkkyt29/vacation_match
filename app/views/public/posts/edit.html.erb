<div class="container">
  <div class="row justify-content-center mt-3 mb-4">
    <%= flash[:notice] %>
  </div>
  <div class="row justify-content-center mt-3 mb-4">
    <h2 class="border-bottom border-gray">Edit Post</h2>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-6 offset-sm-2 col-sm-8">
      <%= flash[:notice] %>
      <%= form_with model: @post, url: post_path(@post.id), method: :patch, local: true do |f| %>

        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :image, accept: 'image/*', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :キャプション %>
          <%= f.text_area :body, rows: '5', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :タグ %>
          <%= f.select :tag, Post.tags.keys.map {|k| [I18n.t("enums.post.tag.#{k}"), k]}, {}, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= f.label :キーワード %>
          <%= f.text_area :keyword, rows: '5', class: "form-control" %>
        </div>


        <div class="row justify-content-center mb-md-4">
          <%= f.submit 'Save', class: "btn btn-outline-success" %>
        </div>
        <div class="row justify-content-center mb-md-4">
          <%= link_to "Delete", post_path(@post.id), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
