<div class="container-fluid">
  <div class="row justify-content-center mt-3 mb-4">
    <%= flash[:notice] %>
  </div>

  <div class="row justify-content-center mt-3 mb-4">
    <h2 class="border-bottom border-gray m-0 pr-1">All posts of <%= @user.name %> </h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-3 col-sm-12">
      <%= render 'public/users/show', user: @user %>
      <!--ログインしてるユーザーにのみ表示されたい-->
      <% if @user == current_user %>
        <div class="text-center-align mt-3">
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-success" %>
        </div>
        <div class="text-center-align mt-3">
          <%= link_to "Your Favorites Posts", favorites_path, class: "btn btn-outline-info" %>
        </div>
        <div class="text-center-align mt-3">
          <%= link_to "退会手続き", confirm_path, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>

    <div class="col-lg-9 col-sm-12">
      <%= render 'public/posts/index', posts: @posts %>
    </div>

  </div>
</div>