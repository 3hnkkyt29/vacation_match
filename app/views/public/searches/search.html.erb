<div class="container-fluid">
  <div class="row d-flex justify-content-center align-items-end my-3">
    <h2 class="border-bottom border-gray m-0 pr-1">Posts search for <%= @content %></h2>
  </div>

    <div class="col-12">
      
      <div class="row justify-content-end">
        <%= render 'public/searches/form' %>
      </div>
      
      <div class="d-flex flex-wrap">
      <% @records.each do |post| %>
        <div class="text-center m-3">
        <%= link_to post_path(post) do %>
          <% if post.image.present? %>
            <%= image_tag post.image, size: '200x200', class: "mb-2" %><br>
          <% else %>
            <%= image_tag 'noimage.png' , size: '200x200' %>
          <% end %>
          <p class="text-truncate text-dark"><%= post.title %></p>
          <p class="text-dark"><%= post.tag_i18n %></p>
　　      <!--いいね、コメント数入れる-->
        <% end %>
        </div>
      <% end %>
      </div>
    </div>
