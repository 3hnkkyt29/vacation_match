<div class="container">
  <div class="row justify-content-center mt-3 mb-3">
    <h3 class="border-bottom border-gray">コメント一覧</h3>
  </div>

  <div class="row justify-content-center">
    <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead class="thead-light">
        <tr class>
          <th>ユーザー名</th>
          <th>投稿タイトル</th>
          <th>コメント</th>
          <th>コメント日時</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @comments.each do |comment| %>
          <td class="align-middle"><%= link_to comment.user.name, admin_user_path(comment.user) %></td>
          <td class="align-middle"><%= link_to comment.post.title, admin_post_path(comment.post) %></td>
          <td class="align-middle"><%= comment.comment %></td>
          <td class="align-middle"><%= l comment.created_at %></td>
          <td class="align-middle"><%= link_to "コメントを削除", admin_comment_path(comment), method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <div class="pagination d-flex justify-content-center mb-4">
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>