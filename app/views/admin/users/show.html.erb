<div class="container-fluid">
  <div class="row justify-content-center mt-3 mb-4">
    <h2 class="border-bottom border-gray m-0 pr-1"><%= @user.name %>さんの詳細ページ</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-3">
      <% if @user.profile_image.present? %>
        <%= image_tag @user.profile_image, size: '100x100' %><br>
      <% else %>
        <%= image_tag 'noimage.png' , size: '100x100' %><br>
       <% end %>
      ユーザーID：<%= @user.id %><br>
      ユーザー名：<%= @user.name %><br>
      メールアドレス：<%= @user.email %><br>
      ステータス：
        <% if @user.is_deleted == false %>
          <b class="text-success">有効</b>
        <% else %>
          <b class="text-secondary">退会</b>
        <% end %><br>

      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <div class="field">
          <%= f.radio_button :is_deleted, false, checked:false %>
            有効
          <%= f.radio_button :is_deleted, true %>
            退会
        </div>
        <%= f.submit "ステータスを変更", class:'btn btn-outline-success my-2' %>
        
      <% end %>



    </div>

    <div class="col-md-9">
      <%= render 'public/posts/index', posts: @posts %>
    </div>

    </div>
  </div>