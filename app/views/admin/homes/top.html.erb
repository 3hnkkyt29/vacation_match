<div class="container">
  <div class="row justify-content-center mt-3 mb-3">
    <h3 class="border-bottom border-gray">ユーザー一覧</h3>
  </div>

  <div class="row justify-content-lg-center">
    <table class="table table-hover table-bordered">
      <thead class="thead-light">
        <tr class>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td class="align-middle"><%= user.id %></td>
          <td class="align-middle"><%= link_to user.name, admin_user_path(user.id) %></td>
          <td class="align-middle"><%= user.email %></td>
          <td class="align-middle">
            <% if user.is_deleted == false %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-secondary">退会</b>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="pagination d-flex justify-content-center mb-4">
  <%= paginate @users %>
  </div>
</div>